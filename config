## libdevuansdk configuration

vars+=(release version mirror section)
arrs+=(core_packages base_packages)

os="devuan"
release="jessie"
version="1.0.0-beta"
mirror="http://packages.devuan.org/merged"
section="main"

image_name=${image_name:-$os_$release_$version_$arch.img}

core_packages=(
	devuan_keyring
	debian_keyring
	bzip2
	initramfs-tools
	binutils
	ca-certificates
	curl
	console-common
	less
	nano
	vi
)

base_packages=(
	dialog
	apt-utils
	fakeroot
	e2fsprogs
	parted
	ssh
	sysvinit
)
